
<%= simple_form_for :experience, url: experiences_path, method: 'get', html: { class: 'form-inline' } do |f| %>
  <%= f.input :category, class:"form-control input-lg", collection: @categories, prompt: "Category?", selected: params.dig(:experience, :category), label: false  %>
  <%= f.input :address, class:"form-control input-lg", label:false, collection: @locations, prompt: "Location?", selected: params.dig(:experience, :address) %>
  <%=  f.input :start, as: :date, html5: true, class:"form-control input-lg", label: false, input_html: { value: params.dig(:experience, :start) } %>
  <%=  f.input :finish, as: :date, html5: true, class:"form-control input-lg", label: false, input_html: { value: params.dig(:experience, :finish) } %>

  <%= f.submit :submit, class:"btn btn-primary btn-lg", value: "Search" %>
  <%#= link_to "Search", experiences_path, class:"btn btn-primary btn-lg" %>
<% end %>

